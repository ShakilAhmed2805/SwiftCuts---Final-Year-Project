                            <li class="breadcrumb-item active">Salons</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <!-- Container-fluid starts-->
        <div class="container-fluid user-card">
            <div class="row">

<!--                Display all salons -->

                <%if(success != ''){%>

                    <div class="alert alert-success dark" role="alert">
                        <p><%= success%></p>
                    </div>
                    <div class="form-group col-xl-12">
                        <label><span class="alert-success"></span></label>
                    </div>

                <%}%>

                <%if(errors != ''){%>
                <div class="alert alert-secondary dark" role="alert">
                    <%errors.forEach(function(error){%>
                        <p><%= error.msg%></p>
                    <%})%>
                </div>
                <%}%>

                <%salons.forEach(function(salon){%>
                    <div class="col-md-6 col-lg-6 col-xl-4 box-col-6">
                        <div class="card custom-card">
                            <% if(salon.image){%>
                                <div class="card-header p-0"><img class="img-fluid" src="/images/salons/<%= salon.image %>" alt=""></div>
                            <%}else{%>
                                    <div class="card-header p-0"><img class="img-fluid" src="../admin/images/user-card/1.jpg" alt=""></div>
                                <%}%>


                            <div class="text-center profile-details"><a href="/admin/salon/<%= salon.id %>">
                                    <h4><%= salon.name %></h4></a>
                                <h6><%= salon.address %></h6>
                            </div>
